FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package.json
COPY frontend/package.json ./

# Copy yarn.lock if it exists (optional)
COPY frontend/yarn.lock* ./

# Install dependencies
RUN yarn install --network-timeout 100000

# Copy frontend code
COPY frontend/ .

# Expose port
EXPOSE 3000

# Start development server
CMD ["yarn", "start"]
